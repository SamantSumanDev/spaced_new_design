<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stack1Trail" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="HorizontalDatePickerStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorSurface">@color/custom_dialog_background</item>
        <item name="colorOnSurface">@color/custom_dialog_text</item>

        <item name="materialCalendarStyle">@style/CustomMaterialCalendarStyle</item>


        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:datePickerMode">calendar</item>
        <item name="android:negativeButtonText">@null</item>
        <item name="android:buttonBarNegativeButtonStyle">@null</item>
        <item name="alertDialogStyle">@style/CustomAlertDialogStyle</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:negativeButtonText">@null</item>
        <item name="android:buttonBarNegativeButtonStyle">@null</item>

        </style>

    <style name="CustomMaterialCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="rangeFillColor">@color/custom_range_color</item>
        <item name="materialCalendarStyle">@style/CustomMaterialCalendarStyle</item>


    </style>




    <color name="custom_dialog_background">#00F44336</color>
    <color name="custom_dialog_text">#FDFDFD</color>
    <color name="custom_selected_range_color">#8DDA0C35</color>
    <color name="custom_selected_range_text_color">#E6AAA5</color>
</resources>